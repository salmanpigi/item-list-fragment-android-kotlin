<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_listener"
    app:startDestination="@id/addFormFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.shoppinglist.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/addFormFragment"
        android:name="com.example.shoppinglist.fragment.AddFormFragment"
        android:label="fragment_add_form"
        tools:layout="@layout/fragment_add_form" />
    <fragment
        android:id="@+id/itemListFragment"
        android:name="com.example.shoppinglist.fragment.ItemListFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_item_list" />
    <action
        android:id="@+id/action_global_addFormFragment"
        app:destination="@id/addFormFragment" />
    <action
        android:id="@+id/action_global_itemListFragment"
        app:destination="@id/itemListFragment" />
</navigation>